<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="appearance_category"
        app:title="Appearance">

        <ListPreference
            app:defaultValue="@string/pref_theme_default_value"
            app:dialogTitle="@string/pref_theme_dialog_title"
            app:entries="@array/pref_theme_list_entries"
            app:entryValues="@array/pref_theme_list_values"
            app:key="@string/pref_theme_key"
            app:title="@string/pref_theme_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>